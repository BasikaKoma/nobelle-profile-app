# Shopify App Credentials
SHOPIFY_API_KEY=YOUR_CLIENT_ID
SHOPIFY_API_SECRET=YOUR_CLIENT_SECRET

# Scopes που χρησιμοποιεί το app
SCOPES=read_customers,write_customers,read_orders,write_orders,write_app_proxy

# Δημόσιο URL του app σου (π.χ. Render)
HOST=https://<your-render>.onrender.com

# Shopify Admin API version
SHOPIFY_API_VERSION=2024-07

# Port (το Render το ορίζει αυτόματα, αλλά βολεύει local)
PORT=3000
